#!/bin/bash

/home/breadbox/p/html2txt < ./README.html > ./README
/home/breadbox/p/html2txt < ./BUGS.html > ./BUGS
/home/breadbox/p/html2txt < ./INSTALL.html > ./INSTALL
/home/breadbox/p/html2txt < ./Changelog.html > ./Changelog

(cd docs && ./mkdocs tworld.doc)

VER=`tr -cd 0123456789. < ver.h`

mkdir tworld-$VER
tar -cf - `cat MANIFEST` | tar -C tworld-$VER -xf -
rm -f tworld-$VER.tar.gz
tar -cvf tworld-$VER.tar tworld-$VER
gzip -9 tworld-$VER.tar
rm -rf tworld-$VER

rm -f twdocs.tar twdocs.tar.gz INSTALL-linux.html INSTALL-win32.html
cp INSTALL.html INSTALL-linux.html
cp win32/INSTALL.html INSTALL-win32.html
tar -cf twdocs.tar README.html INSTALL-linux.html INSTALL-win32.html \
                   BUGS.html Changelog.html
gzip -9 twdocs.tar
rm INSTALL-linux.html INSTALL-win32.html
